## ServerName localhost in /etc/httpd/conf/httpd.conf

---httpd---




mkdir -p /var/project/vovk.ml && cd /var/project/vovk.ml 



echo "<html>
  <head>
    <title>Title message</title>
  </head>
<body>        <h1> Project domain vovk.ml. Centos7 server. Path /var/project </h1>
</body>
</html>" > index.html



echo "<VirtualHost *:80>
    ServerName vovk.ml
    ServerAlias www.vovk.ml
    DocumentRoot /var/project/vovk.ml
    DirectoryIndex index.html index.php
</VirtualHost>"  >> /etc/httpd/conf.d/vovk.ml.conf



sed -i 's/#ServerName www.example.com:80/ServerName dokuwiki.tk/' /etc/httpd/conf/httpd.conf
sed -i "s/DocumentRoot \"\/var\/www\/html\"/DocumentRoot \"\/var\/project\/\"/" /etc/httpd/conf/httpd.conf

